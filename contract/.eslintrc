{
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "prettier/standard"
  ],
  "plugins": ["prettier"],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "artifacts": false,
    "contract": false,
    "assert": true,
    "web3": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "prettier/prettier": 2,
    "no-param-reassign": "error",
    "no-shadow": 2,
    "no-undef": 2,
    "eqeqeq": ["error", "smart"],
    "no-const-assign": "error"
  }
}
